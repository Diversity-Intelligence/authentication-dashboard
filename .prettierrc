{
  "tabWidth": 2,
  "useTabs": false,
  "importOrder": [
    "^react$",
    "^react(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^(components|hooks|contexts|utils|store|assets|routes|constants)(.*)$",
    "^api(.*)$",
    "^[./](?!.*\\.css$)",
    "^[./](.*)\\.css$"
  ],
  "importOrderSortSpecifiers": true,
  "importOrderCombineTypeAndValueImports": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "singleAttributePerLine": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ]
}